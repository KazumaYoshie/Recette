<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, class: "mt-1 rounded-circle", size: "100x100", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>intro</td>
            <td><%= @user.intro %></td>
          </tr>
          <tr>
            <td>follow</td>
            <td>
              <%= link_to user_followings_path(@user) do %>
                <%= @user.followings.count %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>follower</td>
            <td>
              <%= link_to user_followers_path(@user) do %>
                <%= @user.followers.count %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="d-grid gap-1">
        <% if user_signed_in? && @user.id == current_user.id %>
          <%= link_to edit_user_path(@user) do %>
           <button type="button" class="btn btn-success">Edit</button>
          <% end %>
          <%= link_to "退会", hide_user_path(@user), method: :put, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger" %>
        <% else %>
          <% if current_user.following?(@user) %>
           <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
          <% else %>
           <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
          <% end %>
        <% end %>
      </div>

    </div>

    <div class="col-md-6">
      <% @posts.each do |post| %>
       <div class="card w-80 mx-auto mt-1">
         <%= link_to post_path(post.id) do %>
           <%= attachment_image_tag post, :picture, class:"card-img-top" %>
         <% end %>
         <div class="card-body">
           <div class="row">
             <div class="col-10">
               <h3 class="card-title">
                 <%= post.title %>
               </h3>
             </div>
           </div>
         </div>
       </div>
      <% end %>
      <%= paginate @posts %>
    </div>



  </div>
</div>