<%= form_with url: search_posts_path, local: true, method: :get do |f| %>
   <%= f.text_field :keyword %>
   <%= f.submit "検索" %>
<% end %>
<div class="card-list-container py-5">
  <div class="row">
    <div class="col-md-9">
      <div class="w-75 mx-auto mt-1">
        <h2>投稿一覧</h2>
        <% @posts.each do |post| %>
          <div class="card shadow-lg">
            <%= link_to post_path(post.id) do %>
             <%= attachment_image_tag post, :picture, class:"card-img-top" %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <%= link_to post.user do %>
                   <%= attachment_image_tag post.user, :profile_image, class: "mt-1 rounded-circle", size: "50x50", fallback: "no_image.jpg" %>
                  <% end %>
                </div>
                <div class="col-10">
                  <h3 class="card-title">
                    <strong><%= post.title %></strong>
                  </h3>
                  <p><%= post.post_comments.count %>コメント</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="w-75 mx-auto mt-1">
        <h2>いいね数ランキング</h2>
        <% @all_ranks.each.with_index(1) do |post, i| %>
         第<%= i %>位
         <%= link_to post_path(post.id) do %>
           <%= attachment_image_tag post, :picture, class:"card-img-top" %>
         <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

