<div class="card-list-container py-5">
<% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-1 shadow-lg">
    <%= link_to post_path(post.id) do %>
     <%= attachment_image_tag post, :picture, class:"card-img-top" %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to post.user do %>
           a
          <% end %>
        </div>
        <div class="col-10">
          <h3 class="card-title">
            <strong><%= post.title %></strong>
          </h3>
          <p><%= post.post_comments.count %>コメント</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

