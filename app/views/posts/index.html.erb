<div class="card-list-container py-5">
  <div class="row">
    <div class="col-md-8">
      
      <% @posts.each do |post| %>
        <div class="card w-75 mx-auto mt-1 shadow-lg">
          <h2>投稿一覧</h2>
          <%= link_to post_path(post.id) do %>
           <%= attachment_image_tag post, :picture, class:"card-img-top" %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= link_to post.user do %>
                 <%= attachment_image_tag post.user, :profile_image, class: "mt-1 rounded-circle", size: "50x50", fallback: "no_image.jpg" %>
                <% end %>
              </div>
              <div class="col-10">
                <h3 class="card-title">
                  <strong><%= post.title %></strong>
                </h3>
                <p><%= post.post_comments.count %>コメント</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3">
      <h2>いいね数ランキング</h2>
      <div class="w-70 mx-auto mt-1">
        <% @all_ranks.each do |post| %>
         <%= link_to post_path(post.id) do %>
           <%= attachment_image_tag post, :picture, class:"card-img-top" %>
         <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

