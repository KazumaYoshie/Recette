<div class="container">
  <div class="row">
  <div class="w-100 mx-auto mt-1">
    <div>
      <%= attachment_image_tag @post, :picture, size: "800x500" %>
      <p><%= @post.title %></p>
      <p><%= safe_join(@post.cook.split("\n"),tag(:br)) %></p>
      <p><%= @post.user.name %></p>
      <p>コメント件数：<%= @post.post_comments.count %></p>
      <div>
        <% if @post.user == current_user %>
         <%= link_to 'delete', post_path(@post), method: :delete %>
        <% end %>
      </div>
      <% @post.post_comments.each do |post_comment| %>
       <%= attachment_image_tag post_comment.user, :profile_image, class: "mt-1 rounded-circle", size: "30x30", fallback: "no_image.jpg" %>
       <%= post_comment.user.name %>
       <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %><%= link_to "delete", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
      <% end %>
    </div>
    <div>
      <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
       <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
       <%= f.submit "送信" %>
      <% end %>
    </div>
    <%= link_to 'back', posts_path %>
    <%= link_to 'edit', edit_post_path(@post) %>
  </div>
  </div>
</div>