<table class='table table-striped'>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>follow</th>
      <th>follower</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= link_to "Show", user_path(user), class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>